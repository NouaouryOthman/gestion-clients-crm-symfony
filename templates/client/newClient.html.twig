{% extends 'base.html.twig' %}

{% block title %}Ajouter Client{% endblock %}

{% block body %}
<div class="container alert-light">
    <h1 class="display-6 text-center">Nouveau Client</h1>
{{form_start(form)}}
{{form_widget(form)}}
<div class="form-group">
    <legend>La societe ne figure pas dans la liste ?</legend>
    <a class="btn btn-outline-primary" href="{{path('societe')}}">Ajoutez-la!</a>
</div>
<div class="modal-footer">
<button type="submit" class="btn btn-primary">Enregister</button>
<a class="btn btn-secondary" href="{{path('index')}}">Retour</a>
</div>
{{form_end(form)}}
</div>
{% endblock %}